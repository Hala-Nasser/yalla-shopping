<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="30dp"
    android:background="@drawable/slidertwo" >

    <TextView
        android:id="@+id/textView19"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="110dp"
        android:fontFamily="@font/biorhyme_extrabold"
        android:lineSpacingMultiplier=".7"
        android:text="All the needs of"
        android:textColor="#fff"
        android:textSize="48sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/textView21"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fontFamily="@font/clicker_script"
        android:lineSpacingMultiplier=".7"
        android:text="elegant    and modern"
        android:textColor="#222020"
        android:textSize="105sp"
        android:textStyle="bold"
        android:layout_marginTop="10dp"/>

    <TextView
        android:id="@+id/textView23"
        android:layout_width="220dp"
        android:layout_height="wrap_content"
        android:fontFamily="@font/biorhyme_extrabold"
        android:text="women"
        android:gravity="right"
        android:layout_marginStart="200dp"
        android:layout_marginLeft="300dp"
        android:layout_gravity="right"
        android:textColor="#fff"
        android:textSize="28sp"
        android:textStyle="bold"
        android:layout_marginTop="10dp"
        />

</LinearLayout>





